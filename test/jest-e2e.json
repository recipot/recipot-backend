{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "globalSetup": "<rootDir>/test/e2e/setup.ts",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "setupFiles": ["dotenv/config"],
  "forceExit": true,
  "detectOpenHandles": true,
  "moduleDirectories": [
    "node_modules",
    "src"
  ]
}
